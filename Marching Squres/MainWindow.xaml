<Window x:Class="Marching_Squres.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marching_Squres"
        mc:Ignorable="d"
        Title="Marching Squares" Height="760" Width="540">
    <Grid Width="540" Height="720">
        <Image x:Name="img"/>
        <Viewbox>
            <local:DrawingCanvas x:Name="drc" Width="1080" Height="1440"/>
        </Viewbox>
        <Slider x:Name="slider" VerticalAlignment="Bottom" SmallChange="1" Maximum="255" LargeChange="5" ValueChanged="slider_VC" />
    </Grid>
</Window>
